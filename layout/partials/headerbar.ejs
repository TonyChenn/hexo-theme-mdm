<div class="mdui-appbar mdui-shadow-0" id="bar">
    <div class="mdui-toolbar mdui-text-color-white">
        <a class="mdui-btn mdui-btn-icon mdui-hidden-sm-up" mdui-menu="{target: '#example-2'}">
            <i class="mdui-icon material-icons">menu</i>
        </a>
        <ul class="mdui-menu" id="example-2">
        <% Object.keys(theme.menu).forEach(key => { %>
            <li class="mdui-menu-item">
            <a href="<%=theme.menu[key].url%>" class="mdui-ripple">
                <i class="mdui-menu-item-icon mdui-icon material-icons"><%= theme.menu[key].icon%></i>
                <%= theme.menu[key].text%>
            </a>
            </li>
            <li class="mdui-divider"></li>
        <% }); %>
        </ul>
        <!--大屏-->
        <% Object.keys(theme.menu).forEach(key => { %>
        <a href="<%=theme.menu[key].url%>"
            class="mdui-typo-title mdui-ripple mdui-ripple-white mdui-hidden-xs">
            <%=theme.menu[key].text%>
        </a>
        <% }); %>
        <div class="mdui-toolbar-spacer"></div>
