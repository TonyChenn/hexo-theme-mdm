        <button onclick="themeChange()"
                class="mdui-btn mdui-btn-icon mdui-ripple mdui-text-color-white" 
                mdui-tooltip="{content: '切换亮/暗色模式'}">
            <i class="mdui-icon material-icons" id="themeIcon">brightness_7</i>
        </button>
        <button class="mdui-btn mdui-btn-icon mdui-ripple" mdui-menu="{target: '#share_menu'}">
            <i class="mdui-icon material-icons">share</i>
        </button>
        <ul class="mdui-menu" id="share_menu">
            <% Object.keys(theme.share).forEach(key => { %>
                <li class="mdui-menu-item">
                    <button class="mdui-btn mdui-ripple mdui-btn-block" onclick="">
                        <%=key%>
                    </button>
                </li>
            <% }); %>
            </ul>
    </div>
</div>